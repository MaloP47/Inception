[mysqld]
basedir                         = /usr
bind_address                    = *
datadir                         = /var/lib/mysql
max_allowed_packet              = 256M
max_connect_errors              = 1000000
pid_file                        = /run/mysqld/mysqld.pid
port                            = 3306
skip_external_locking
skip_name_resolve
socket                          = /run/mysqld/mysqld.sock
tmpdir                          = /tmp
user                            = mysql